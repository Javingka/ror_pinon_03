
<h1> Edita aqui tu moto</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@moto, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :modelo %>
      <%= f.text_field :modelo, placeholder: "Cual es el modelo de tu moto?. Si es customizada cual es el modelo de base?", class: 'form-control' %>
    
      <%= f.label 'Nombre' %>
      <%= f.text_field :name, placeholder: "Dale un nombre a tu moto...", class: 'form-control' %>
    
      <%= f.label 'Año' %>
      <%= f.text_field :ano, placeholder: "De que año es la moto?", class: 'form-control' %>
    
      <%= f.label 'Cilindrada' %>
      <%= f.text_field :cilindrada, placeholder: "Cuál es la cilindrada de tu moto?", class: 'form-control' %>
    
      <span class="picture">
      <%= f.label 'Cambia la foto de tu moto'  %>
        <%= f.file_field :picture %>
      </span>

      <div class="field">
        <%= f.label 'Descripción' %>
        <%= f.text_area :description, placeholder: "Aqui puedes dar detalles acerca de tu moto..." %>
      </div>
      <%= f.submit "Edita nueva moto", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>

<script type="text/javascript">
  $('#moto_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('El tamaño máximo para la imagen es 5MB. Por favor escoge un archivo mas pequeño.');
    }
  });
</script>
