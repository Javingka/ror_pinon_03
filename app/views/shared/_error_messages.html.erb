<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <% err = pluralize(@user.errors.count, "error" )%>
      El formulario contiene <%= @user.errors.count%> <%= err="errors"? "error" : "errores"  %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
