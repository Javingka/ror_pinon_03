<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= include_gon %>

    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>

    <meta property="og:title" content="MotoCustom" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image" content="<%= current_custom.picture.url %>" />
    <meta property="og:image:url" content="<%= current_custom.picture.url %>" />

  </head>
  <body style="background-color: black;">

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1432549193716347',
      xfbml      : false,
      version    : 'v2.3'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

    <%= render 'layouts/header' %>

    <!-- MESSAGES -->
    <div class="container" id="flash">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
    
    <!-- CONTENT -->
    <% if content_for?(:home) %>
      <%= yield(:home) %>
    <% elsif content_for?(:custom) %>
      <%= yield(:custom) %>
    <% else %>
       <div class="container">
          <%= yield %>
       </div>
    <% end %>

    <!-- FOOTER -->
    <div class="container">
    	<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %> <!-- this is to not show debug information to users of a deployed app -->
    </div>
    <div id="fb-root"></div> <!-- facebook_share gem -->
  </body>
</html>
