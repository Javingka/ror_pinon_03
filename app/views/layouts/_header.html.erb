<header class="navbar navbar-fixed-top ">
  <div class="container">
    <% if content_for?(:show_custom) %>
      <% if !logged_in? %>
         <!-- leave with no logo, to not appear in facebook share -->
      <% else %>
      <% logo = image_tag("logo_pagina2.png", :alt => "Taller Piñon", :class=> "logo", size:'64x48') %>
      <%= link_to logo +' Diseño y fabricación de motos', root_path , id: "logo" %> 
      <% end %>
    <% else %>
        <% logo = image_tag("logo_pagina2.png", :alt => "Taller Piñon", :class=> "logo", size:'64x48') %>
        <%= link_to logo +' Diseño y fabricación de motos', root_path , id: "logo" %> 
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",  root_path , class:"page-scroll", method: :get%></li>
        
        <% if !current_page?(contact_path) && !current_page?(about_path) && !current_page?(customapp_path) && !current_page?(login_path)%>
          <% if current_page?(root_path) %>
            <li><%= link_to "Motos Piñon",  '#galeria-motos' , class:"page-scroll"%></li>
          <% else %>
            <li><%= link_to "Motos Piñon", root_path+'#galeria-motos' , class:"page-scroll"%></li>
          <% end %>
        <% end %>

        <!-- Moto Custom Menu -->
        <li style="line-height: 47px;"> | </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toogle" data-toggle="dropdown">
              Moto Custom<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Nombre(AX4)", customapp_path(:modelo => 'AX4'), method: :get %> </li>
              <li><%= link_to "Nombre(Storm)", customapp_path(:modelo => 'storm'), method: :get %></li>
              <li class="divider"></li>
              <li> <%= link_to "Ver todas", '#', method: "delete" %> </li>
            </ul>
          </li>
          <!--     <li><%= link_to "Moto Custom", customapp_path, class:"page-scroll", method: :get %></li>-->
        <li style="line-height: 47px;"> | </li>

        <!-- Registro y logs in-out -->
        <% if logged_in? %>
          <li><%= link_to "Motos Usuarios", motos_path %> </li>
          <li><%= link_to "Usuarios", users_path %> </li>
          <li style="line-height: 47px;"> | </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toogle" data-toggle="dropdown">
              Cuenta<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user %> </li>
              <li><%= link_to "Setting", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to "Salir", logout_path, method: "delete" %> </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Registrate!", signup_path  %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
