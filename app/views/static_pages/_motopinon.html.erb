
<li id="moto-<%= @moto.id %>" >
  <div class="row">
    <div class="col-md-9">
      <%= image_tag @moto.picture.url, class:'moto-responsive img-g' if @moto.picture? %>
    </div>

    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12">
          <% user = User.find_by(id: @moto.user_id) %>
          <%= gravatar_for user, size: 50 %>
          <%= link_to user.name, user %>
        </div>
        <br>
        <div class="col-md-12">
          <h3 class="nombre text-lake-35px"> <%= @moto.name %></h3> <br>
          <span class="modelo"> modelo: <%= @moto.modelo %> </span> <br>
          <span > ano: <%= @moto.ano %> </span> <br>
          <span > cilindrada: <%= @moto.cilindrada %> </span> <br>

          <% if !@precio.blank? %>
            <h3 class="nombre text-lake-35px"> $ <%= @precio %></h3> <br>
          <% else %>
          </br>
          <% end %>
          <%= link_to "cotizar modelo", contact_path( :modelo => @modelo  )  ,  class:'btn btn-primary'%>
          <hr>
          <% if logged_in? && current_user.admin? && !current_user?(@moto.user_id) %>
            <%= link_to "editar moto", edit_moto_path(@moto)  %> <br>
            <%= link_to "eliminar", @moto, method: :delete, data: { confirm: "Estas seguro de eliminar esta moto?" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>
