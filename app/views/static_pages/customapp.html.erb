
<!-- APLICACIÓN CUSTOMIZACIÓN -->
<% content_for :custom do %>
  <div class="container">
    <%= render 'static_pages/customapp_partials/custombuttons' %>
  </div>
<br>

<!-- Parciales con los dibujos de cada modelo -->
  <% modelo = true %>
  <div class="container">
  <% case @modelo %>
  <% when 'ax4' %>
    <%= render 'static_pages/customapp_partials/customdisplays_ax4' %>
  <% when 'storm' %>
    <h1> DIBUJOS STORM </h1>
  <% else %>
    <% modelo = false %>
    <h2> Escohe el modelo a customizar: </h2>
        <div class="col-md-4 col-md-offset-2">
          <%= link_to "Customiza tu AX4", customapp_path(:modelo => 'ax4'), method: :get, class:'btn btn-primary'%>
        </div> 
        <div class="col-md-4 ">
          <%= link_to "Customiza tu Storm", customapp_path(:modelo => 'storm'), method: :get , class:'btn btn-primary'%>
        </div>
  <% end %>
  </div>

<!-- botones para guardar nuevo modelo o registrarse -->
  <div class="container">
    <% if modelo %>
    <%= render 'static_pages/customapp_partials/customlinks' %>
  <% end %>
  </div>
 
  <br>

<!-- visualizaciones de las customizaciones del usuario actual -->
  <% if logged_in? %>
    <div class="container">
      <%= render 'static_pages/customapp_partials/miscustoms' %>
    </div>
  <% end %>

<%= javascript_tag do %>
  window.custompath = '<%= j custom_apps_url %>';
  window.modelo = '<%= j @modelo %>';
<% end %>

<% end %>
