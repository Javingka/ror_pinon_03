$().ready ->
  $('.kwicks').kwicks
    maxSize: 250
    behavior: 'menu'
  $('.kwicks li').click (event) ->
    ele = document.getElementById(event.target.id)
    color = $(ele).css('background-color')
    col = new RGBColor(color)
    #Usando la clase RGB color incluida en assets
    changeEstanque col.toHex_n()
    return
  return

